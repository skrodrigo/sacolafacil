{
  "name": "hono",
  "type": "module",
  "scripts": {
    "dev": "tsx watch api/index.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/api/index.js",
    "start:dev": "NODE_ENV=development tsx api/index.ts",
    "type-check": "tsc --noEmit",
    "lint": "tsc --noEmit",
